<%- include('layout', { title:''}) %>
<div class="container">

    <div class="form-container">
        <div class="form-container signin">
            <form action="/login" method="post">
                <h1>Log into your Account</h1>
                <input  style="display: block; margin: auto;" type="email"
                placeholder="Email" required>
                <input  style="display: block; margin: auto;" type="password"
                placeholder="Password" required>
                <button class="btn btn-dark" type="submit" style="display: block; margin: auto;">Login</button>
            </form>
        </div>
        <div class="form-container signup">
            <form action="/register" method="post">
                <h1>Register Here</h1>
                <input type="text"
                placeholder="Type your name" required>
                <input type="email"
                placeholder="Email" required>
                <input type="password"
                placeholder="Password" required>
                <input type="password"
                placeholder="Confirm password" required>

                <button class="btn btn-dark" type="submit" style="display: block; margin: auto;">Register</button>
            </form>
        </div>
    </div>

</div>
